<resources>

    <style name="AppBaseTheme" parent="Theme.MaterialDesignTheme">
        <!--
        android:Theme.Light.NoTitleBar
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.MaterialDesignTheme" parent="Theme.AppCompat.Light">
        <!-- customize the color palette -->
        <!--ActionBar Color-->
        <item name="colorPrimary">@color/basecolor</item>
        <!-- 导航栏 Color -->
        <item name="colorPrimaryDark">@color/basecolor</item>
        <!-- 单选按钮等颜色-->
        <item name="colorAccent">@color/basecolor</item>
    </style>

    <style name="NoBackgroundTheme" parent="Theme.MaterialDesignTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transbackground</item>
    </style>

    <style name="nineBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/nineSize</item>
    </style>

    <style name="sevenBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sevenSize</item>
    </style>

    <style name="eightBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/eightSize</item>
    </style>

    <style name="sixLightBlack">
        <item name="android:textColor">@color/lightblack</item>
        <item name="android:textSize">@dimen/sixSize</item>
    </style>

    <style name="sixTransBlack">
        <item name="android:textColor">@color/transblack</item>
        <item name="android:textSize">@dimen/sixSize</item>
    </style>

    <style name="sevenTransBlack">
        <item name="android:textColor">@color/lighttransblack</item>
        <item name="android:textSize">@dimen/sevenSize</item>
    </style>

    <style name="sevenLightBlack">
        <item name="android:textColor">@color/lightblack</item>
        <item name="android:textSize">@dimen/sevenSize</item>
    </style>

    <style name="sixDarkGray">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">@dimen/sixSize</item>
    </style>

    <style name="sevenDarkGray">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">@dimen/sevenSize</item>
    </style>

    <style name="fiveDarkGray">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">@dimen/fiveSize</item>
    </style>

    <style name="fiveLightBlack">
        <item name="android:textColor">@color/lightblack</item>
        <item name="android:textSize">@dimen/sixSize</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>

    <style name="bottom_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sixSize</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/gray_normal</item>
    </style>

    <style name="divider.v">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="divider.h">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="margin_withouttop">
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
    </style>

    <style name="margin_withoutbottom">
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="margin_leftright">
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
    </style>


    <style name="padding_withouttop">
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:paddingBottom">@dimen/margin</item>
    </style>

    <style name="padding_withoutbottom">
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:paddingTop">@dimen/margin</item>
    </style>

    <style name="padding_leftright">
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
    </style>


    <style name="radiobutton_style">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn_basecolor</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sixSize</item>
        <item name="android:textColor">@color/color_lightblack_white</item>
    </style>

    <style name="pop_anim">
        <item name="android:windowEnterAnimation">@anim/pop_in_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_out_anim</item>
    </style>

    <style name="pop_big_anim">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <style name="pop_trans_anim">
        <item name="android:windowEnterAnimation">@anim/trans_top_in</item>
        <item name="android:windowExitAnimation">@anim/trans_top_out</item>
    </style>

    <style name="pop_alpha_anim">
        <item name="android:windowEnterAnimation">@anim/pop_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/pop_alpha_out</item>
    </style>

    <style name="fall_out_anim">
        <item name="android:windowEnterAnimation">@anim/fall_anim</item>
        <item name="android:windowExitAnimation">@anim/outtop_anim</item>
    </style>

</resources>
