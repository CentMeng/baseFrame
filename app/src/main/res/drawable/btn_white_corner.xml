<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10px"/>
            <size android:width="100dp" android:height="48dp"></size>
            <solid android:color="@color/gray_normal"/>
            <stroke android:width="1px" android:color="@color/gray_normal" />
        </shape>
    </item>
  <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10px"/>
            <size android:width="100dp" android:height="48dp"></size>
            <solid android:color="@color/gray_normal"/>
            <stroke android:width="1px" android:color="@color/gray_normal" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10px"/>
            <size android:width="100dp" android:height="48dp"></size>
            <solid android:color="@color/gray_normal"/>
            <stroke android:width="1px" android:color="@color/gray_normal" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="10px"/>
            <size android:width="100dp" android:height="48dp"></size>
            <solid android:color="@color/lightgray"/>
            <stroke android:width="1px" android:color="@color/lightgray" />
        </shape>
    </item>
     <item>
        <shape android:shape="rectangle">
            <corners android:radius="10px"/>
            <size android:width="100dp" android:height="48dp"></size>
            <solid android:color="@color/white"/>
            <stroke android:width="1px" android:color="@color/gray" />
        </shape>
    </item>
</selector>
